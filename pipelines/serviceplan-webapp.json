{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "AppServiceSKUName": {
      "defaultValue": "S1",
      "type": "String",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "metadata": {
        "description": "Describes plan's instance type"
      }
    },
    "AppServiceSKUCapacity": {
      "type": "int",
      "defaultValue": 2,
      "minValue": 1,
      "metadata": {
        "description": "Describes plan's instance count"
      }
    },
    "AppServiceName": {
      "defaultValue": "APPSERVICE",
      "type": "String",
      "metadata": {
        "description": "Describes plan's name"
      }
    },
    "SiteName": {
      "defaultValue": "mysite",
      "type": "String",
      "metadata": {
        "description": "Describes site name"
      }
    },
    "ConfigName": {
      "defaultValue": "mysite/web",
      "type": "String"
    },
    "ClientAffinityEnabled": {
      "defaultValue": false,
      "type": "bool"
    },
    "WebSocketsEnabled": {
      "defaultValue": false,
      "type": "bool"
    }
  },
    "variables": {},
    "resources": [
      {
        "comments": "WebFarm",
        "type": "Microsoft.Web/serverfarms",
        "sku": {
          "name": "[parameters('AppServiceSKUName')]",
          "capacity": "[parameters('AppServiceSKUCapacity')]"
        },
        "kind": "app,linux",
        "name": "[parameters('AppServiceName')]",
        "apiVersion": "2015-08-01",
        "location": "[resourceGroup().location]",
        "scale": null,
        "properties": {
          "name": "[parameters('AppServiceName')]",
          "numberOfWorkers": 1,
          "reserved": true
        },
        "dependsOn": []
      },
      {
        "comments": "Site",
        "type": "Microsoft.Web/sites",
        "kind": "app,linux",
        "name": "[parameters('SiteName')]",
        "apiVersion": "2015-08-01",
        "location": "[resourceGroup().location]",
        "tags": {
        },
        "scale": null,
        "properties": {
          "name": "[parameters('SiteName')]",
          "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('AppServiceName'))]",
          "clientAffinityEnabled": "[parameters('ClientAffinityEnabled')]"
        },
        "dependsOn": [
          "[resourceId('Microsoft.Web/serverfarms', parameters('AppServiceName'))]"
        ]
      },
      {
        "comments": "Site config",
        "type": "Microsoft.Web/sites/config",
        "name": "[parameters('ConfigName')]",
        "apiVersion": "2015-08-01",
        "location": "[resourceGroup().location]",
        "tags": {
        },
        "scale": null,
        "properties": {
          "numberOfWorkers": 1,
          "netFrameworkVersion": "v4.0",
          "phpVersion": "",
          "pythonVersion": "",
          "nodeVersion": "",
          "linuxFxVersion": "",
          "scmType": "VSTSRM",
          "use32BitWorkerProcess": true,
          "webSocketsEnabled": "[parameters('WebSocketsEnabled')]",
          "alwaysOn": true,
          "loadBalancing": 1,
          "localMySqlEnabled": false,
          "http20Enabled": true
        },
        "dependsOn": [
          "[resourceId('Microsoft.Web/sites', parameters('SiteName'))]"
        ]
      }
    ]
  }